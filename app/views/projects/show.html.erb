<% set_meta_tags title: @project.title, description: @project.title, keywords: 'Ruby, Rails, YEG, Edmonton, Project', reverse: true %>
<div id="post_show_content" class="skinny_wrapper wrapper_padding  content_container">
	<header>
		<p class="date"><%= @project.created_at.strftime('%B %d, %Y') %></p>
		<h1><%= @project.title %></h1>
		<hr>
	</header>

	<div id="content">
		<%= markdown @project.description %>

		<div class="button_wrapper">
			<a href="<%= @project.link %>" class="project_button" target="_blank">Visit <%= @project.title %></a>
		</div>
	</div>

	<% if user_signed_in? %>
		<div id="admin_links">
			<%= link_to "Edit", edit_project_path(@project) %>
			<%= link_to "Delete", project_path(@project), method: :delete, data: { confirm: "Are you sure?" } %>
		</div>
	<% end %>

	<hr>
</div>
