<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<h2><%= pluralize(@post.errors.count, "error") %> prevented this post from saving:</h2>
		<ul>
			<%= @post.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	<% end %>

	<%= f.label :title %><br>
	<%= f.text_field :title %>

	<br>

  <%= f.label :subtitle %><br>
  <%= f.text_field :subtitle, :maxlength => 86 %>

  <br>

  <%= f.label :tags %><br>
  <%= f.text_field :tag_list, value: @post.tag_list.to_s, placeholder: "Tags separated with comma"  %>

  <br>

  <%= f.label :published %><br>
  <%= f.select :published, [['Published', true], ['Draft', false]] %>

  <br>
  <br>

	<%= f.label :content, "Write your article here" %><br>
	<%= f.text_area :content %>

	<br>
	<br>

	<%= f.submit %>

<% end %>
